  f1000-projects = {QuantInvest},
  groups         = {ML_ForcstTimeSrs},
  timestamp      = {2020-02-25 23:57},
}

@Article{Bandara-et-al-2019b,
  author         = {Bandara, Kasun and Bergmeir, Christoph and Hewamalage, Hansika},
  date           = {2019-09-10},
