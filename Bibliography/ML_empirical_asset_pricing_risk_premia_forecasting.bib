  groups               = {FrcstQWIM_MedLngTerm, ML_ForcstTimeSrs, ML_AssetPricing},
  owner                = {cristi},
  posted-at            = {2016-05-01 15:30:42},
  timestamp            = {2020-02-25 23:59},
}

@Article{Wang-et-al-2019f,
